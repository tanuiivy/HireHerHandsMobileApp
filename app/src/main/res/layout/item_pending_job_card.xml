<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp"
    android:elevation="4dp"
    android:background="@drawable/card_background"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

    <TextView
        android:id="@+id/tvJobTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Job Title"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="@color/text_primary"/>

    <TextView
        android:id="@+id/tvJobDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Job Description"
        android:textSize="14sp"
        android:textColor="@color/text_secondary"
        android:lineSpacingMultiplier="1.4"/>

    <TextView
        android:id="@+id/tvJobLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Location: "
        android:textSize="13sp"
        android:textColor="@color/text_secondary"/>

    <TextView
        android:id="@+id/tvJobDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Date: "
        android:textSize="13sp"
        android:textColor="@color/text_secondary"/>

    <TextView
        android:id="@+id/tvJobBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Budget: "
        android:textSize="16sp"
        android:textStyle="bold"
        android:textColor="@color/success"/>

    <TextView
        android:id="@+id/tvJobStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Status: "
        android:textSize="13sp"
        android:textColor="@color/primary"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/border"/>

    <TextView
        android:id="@+id/tvCustomerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Customer: "
        android:textSize="13sp"
        android:textStyle="bold"
        android:textColor="@color/text_primary"/>

    <TextView
        android:id="@+id/tvCustomerEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:text="Email: "
        android:textSize="13sp"
        android:textColor="@color/text_secondary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:spacing="12dp">

        <Button
            android:id="@+id/btnAcceptJob"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:text="Accept"
            android:textColor="@color/button_text"
            android:background="@drawable/button_primary"
            android:textSize="14sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/btnRejectJob"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:layout_marginStart="12dp"
            android:text="Reject"
            android:textColor="@color/primary"
            android:background="@drawable/button_secondary"
            android:textSize="14sp"
            android:textStyle="bold"/>
    </LinearLayout>

</LinearLayout>