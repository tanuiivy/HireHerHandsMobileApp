<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="23dp">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post a New Job"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_marginTop="40dp"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create a new job posting to find the right talent"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:layout_marginBottom="24dp" />

            <!-- Job Title input -->
            <EditText
                android:id="@+id/etJobTitle"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Job Title"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/input_background"
                android:layout_marginBottom="16dp" />

            <!-- Job Description input -->
            <EditText
                android:id="@+id/etJobDescription"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:gravity="top"
                android:hint="Job Description"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp"
                android:padding="16dp"
                android:minLines="3"
                android:background="@drawable/input_background"
                android:layout_marginBottom="16dp" />

            <!-- Job Location input -->
            <EditText
                android:id="@+id/etJobLocation"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Job Location"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/input_background"
                android:layout_marginBottom="16dp" />

            <!-- Job Date input -->
            <EditText
                android:id="@+id/etJobDate"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Job Date (e.g., 2025-11-05)"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/input_background"
                android:layout_marginBottom="16dp" />

            <!-- Job Budget input -->
            <EditText
                android:id="@+id/etJobBudget"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:hint="Job Budget"
                android:textColor="@color/text_primary"
                android:textColorHint="@color/text_secondary"
                android:textSize="16sp"
                android:inputType="numberDecimal"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/input_background"
                android:layout_marginBottom="16dp" />

            <!-- Skill Spinner -->
            <Spinner
                android:id="@+id/spinnerSkill"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:background="@drawable/input_background"
                android:layout_marginBottom="32dp" />

            <!-- Post Job button -->
            <Button
                android:id="@+id/btnPostJob"
                android:text="Post Job"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/button_primary"
                android:textColor="@color/button_text"
                android:textSize="14sp"
                android:textStyle="bold"/>

            <!-- Back to Dashboard button -->
            <Button
                android:id="@+id/btnBack"
                android:text="Back to Dashboard"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@drawable/button_secondary"
                android:textColor="@color/button_text"
                android:textSize="16sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </ScrollView>
</layout>
