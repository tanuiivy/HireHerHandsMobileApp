<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
    </data>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="23dp">

        <!-- Added header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apply as Worker"
            android:textSize="28sp"
            android:textStyle="bold"
            android:layout_marginTop="40dp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete your profile to start receiving opportunities"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="24dp" />

        <!-- Bio Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About You"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etWorkerBio"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:hint="Short Bio"
            android:minLines="3"
            android:gravity="top"
            android:padding="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/input_background"
            android:layout_marginBottom="16dp" />

        <!-- Professional Experience Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Professional Details"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/etHourlyRate"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Hourly Rate ($)"
            android:inputType="numberDecimal"
            android:padding="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/input_background"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etExperience"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Years of Experience"
            android:inputType="number"
            android:padding="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/input_background"
            android:layout_marginBottom="12dp" />

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:hint="Location"
            android:padding="16dp"
            android:textColor="@color/text_primary"
            android:textColorHint="@color/text_secondary"
            android:background="@drawable/input_background"
            android:layout_marginBottom="24dp" />

        <!-- Skills Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skills"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvSkills"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginBottom="24dp" />

        <!-- Verification Section with styled container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/card_background"
            android:padding="16dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Verification"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <ImageView
                android:id="@+id/ivIdPicture"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginBottom="12dp"
                android:scaleType="centerCrop"
                android:background="@drawable/image_placeholder" />

            <Button
                android:id="@+id/btnSelectId"
                android:text="Select ID from Gallery"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/button_primary"
                android:textColor="@color/button_text"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <!-- Submit & Back Buttons -->
        <Button
            android:id="@+id/btnSubmitWorker"
            android:text="Submit Application"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_primary"
            android:textColor="@color/button_text"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btnBack"
            android:text="Back to Dashboard"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/button_primary"
            android:textColor="@color/button_text"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
</layout>
